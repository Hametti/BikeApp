<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeApp.Views.MainPage">

    <Grid BackgroundColor="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="#222222" 
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="Fill" 
                     Margin="0,0,0,0">
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center" 
                         VerticalOptions="Center">
                <ContentView Padding="0,20,0,20" 
                             VerticalOptions="FillAndExpand">
                    <Image Source="bikeapp.png" 
                           VerticalOptions="Center" 
                           HeightRequest="100" />
                </ContentView>
            </StackLayout>
        </StackLayout>
        <ScrollView Grid.Row="1">
            <StackLayout Padding="0, 20, 0, 20">
                <Label Text="There will be a main page here" 
                       FontSize="Medium" 
                       TextColor="White" 
                       HorizontalTextAlignment="Center" />

            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>